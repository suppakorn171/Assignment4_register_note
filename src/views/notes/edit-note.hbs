<div class="row">
    <div class="card col-sm-12 col-md-8 col-lg-6 col-xl-4 mx-auto px-0">
        <div class="card-header text-center">
            <h3 class="m-0">Edit Note</h3>
        </div>
        <div class="card-body">
            <form class="was-validated" action="/notes/edit/{{note._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <label for="note-title" class="text-left">Note title</label>
                    <input type="text" name="noteTitle" class="form-control is-invalid" id="note-title" autocomplete="off" value="{{note.title}}" autofocus required>
                </div>
                <div class="form-group">
                    <label for="note-text" class="text-left">Note text</label>
                    <br>
                    <textarea id="note-text" name="noteDescription" rows="3" class="form-control is-invalid" required>{{note.description}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-lg btn-block">Save</button>
            </form>
        </div>
    </div>
</div>